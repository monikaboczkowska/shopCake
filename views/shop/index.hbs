<!-- subscribsion form section -->

<section class="subscribe py-5" id="email-form">
    <div class="container-fluid">
        <div class="row align-items-center mx-auto">
            <div class="col-sm-10 py-5 mx-auto text-center">

                <div class="col-10 mx-auto col-sm-6 text-center">
                    <h1 class="text-capitalize">Subscribe <strong class="banner-title"> Here</strong></h1>
                </div>


                <form action="/subscribe" method="POST" class="form-inline d-flex justify-content-center">

                    <input name="email" type="email" class="form-control mb-2 w-75" id="email" placeholder="Type your email here..." required pattern="[a-z0-9._%+-]+@[a-z0-9.-]+\.[a-z]{2,4}$">

                    <button type="submit" class="btn btn-outline-light mb-2 ml-2 email-btn" value="submit">Submit</button>
                </form>



            </div>
        </div>
    </div>
</section>
