<div class="container-fluid">
    <div class="row max-height justify-content-center align-items-center">
        <div class="col-10 mx-auto banner text-center mt-5 pt-5">

            <h1 class="animate__animated animate__fadeInUp">Welcome to <strong class="banner-title">Cakes Shop</strong></h1>
            <p class="animate__animated animate__fadeInDown">Explore Our Favorites!</p>


            <div id="success" class="alert alert-warning alert-dismissible fade show thanks-alert" role="alert" {{#if noMessages}}hidden{{/if}}>
                {{ successMsg }}
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        </div>
    </div>
</div>


<section id="store">
    <div class="container">

        <div class="row">
            <div class="col-10 mx-auto mt-5 pb-5 col-sm-6 text-center">

                <h1 class="text-capitalize display-4">our <strong class="banner-title">Store</strong></h1>
                <hr>
            </div>
        </div>

        {{# each products}}

        <div class="row pb-5">

            {{# each this }}


            <div class="col-sm-6 col-md-4 p-2">
                <div class="card">
                    <img src="{{ this.imagePath }}" class="card-img-top img-fluid" alt="...">
                    <div class="card-body">
                        <h5 class="card-title">{{ this.title }}</h5>
                        <p>
                            {{ this.description }}
                        </p>
                        <hr>
                        <div class="card-text d-flex justify-content-between align-items-baseline">
                            <div class="text-muted price">Â£ {{ this.price }}

                            </div>
                            <a href="/add-to-cart/{{this._id}}" class="btn btn-buy float-right">Add to Cart</a>
                        </div>
                    </div>
                </div>
            </div>

            {{/each}}

        </div>

        {{/each}}
    </div>
</section>




