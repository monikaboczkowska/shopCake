<div class="container my-5 py-5">

    {{# if products }}

    <div class="row">
        <div class="col-sm-6 col-md-6 mx-auto w-100">

            <h1 class="text-center mb-5 shopping-title">Shopping Cart</h1>

            <ul class="list-group">

                {{# each products }}

                <li class="list-group-item">
                    <img src="{{ this.item.imagePath }}" class="card-img-top img-fluid img-shopping-cart" alt="...">
                    <strong class="ml-3">{{ this.item.title }}</strong>

                    <span class="label label-success ml-3">£ {{ this.price }}</span>

                    <span class="badge badge-warning ml-3">Quantity: {{ this.qty }}</span>


                    <div class="btn-group action-btn">
                        <button type="button" class="btn btn-outline-info">Action</button>
                        <button type="button" class="btn btn-info dropdown-toggle dropdown-toggle-split" data-toggle="dropdown">
                            <span class="caret"></span>
                        </button>

                        <div class="dropdown-menu">
                            <a class="dropdown-item" href="/reduce/{{this.item._id}}">Reduce by 1</a>

                            <a class="dropdown-item" href="/remove/{{this.item._id}}">Remove All</a>
                        </div>
                    </div>
                </li>

                {{/each}}

            </ul>
        </div>
    </div>
    <hr class="w-50">
    <div class="row">
        <div class="col-sm-6 col-md-6 mx-auto w-100">
            <strong class="total-price">Total: £ {{ totalPrice }}</strong>
        </div>
    </div>
    <hr class="w-50">
    <div class="row">
        <div class="col-sm-6 col-md-6 mx-auto w-100">
            <a href="/checkout" type="button" class="btn btn-success checkout-btn">Checkout</a>
        </div>
    </div>

    {{ else }}




    <div class="container-fluid">
        <div class="row max-height-cart justify-content-center align-items-center">
            <div class="col-10 mx-auto text-center">
                <h3 class="display-4">No Items in Cart.</h3>
                <a href="/" class="btn btn-shop mt-4">Home</a>
            </div>
        </div>
    </div>


    {{/if}}

</div>
