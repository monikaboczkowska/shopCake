<div class="container-fluid h-100" style="background: linear-gradient(rgba(0, 0, 0, 0.6), rgba(0, 0, 0, 0.6)), url(https://cdn.pixabay.com/photo/2019/02/08/22/28/valentines-day-3984154_1280.jpg) center/cover fixed no-repeat;">
    <div class="row justify-content-center align-items-center h-100">
        <div class="col-md-4 text-center">

            <div class="signupForm">
                <h1 class="display-4 pt-5 text-white">Login</h1>


                <!-- show any messages that come back with authentication  -->

                {{#if hasErrors}}
                <div class="alert alert-danger">
                    {{# each messages }}
                    <p>{{this}}</p>
                    {{/each}}
                </div>
                {{/if}}

                <form action="/user/signin" method="post" class="p-5">
                    <div class="form-group">

                        <input type="email" id="email" name="email" class="form-control" placeholder="Enter your email">
                    </div>

                    <div class="form-group">

                        <input type="password" id="password" name="password" class="form-control" placeholder="Enter your password">
                    </div>

                    <input type="hidden" name="_csrf" value="{{ csrfToken }}">
                    <button type="submit" class="btn btn-info">Login</button>
                </form>


                <p class="text-light">Don't have an account?
                    <a href="/user/signup" class="text-light pr-2">
                        <br>Sign up here!</a>
                </p>
            </div>
        </div>
    </div>
</div>
